nav(class=["navbar", "navbar-dark", "bg-dark", "fixed-top", "navbar-expand-md"])
  a(class=["navbar-brand"], href='/') Arthur in Sweden
  button(class=["navbar-toggler"], type="button", data-toggle="collapse", data-target="#mainNavHide", aria-controls="mainNavHide", aria-label="Toggle Navigation")
    span(class=["navbar-toggler-icon"])
  div(class=["collapse", "navbar-collapse"], id="mainNavHide")
    ul(class=["navbar-nav", "mr-auto"])
      each page in pages
        li(class=["nav-item"])
          a(href=page.href, class=["nav-link"])= page.title
      li(class=["dropdown", "nav-item"])
        a(href="#", class=["dropdown-toggle", "nav-link"], data-toggle="dropdown", role="button", aria-haspopup) Posts
        div(class="dropdown-menu")
          each post in blogPages
            a(href="/blog/" + post.index, class="dropdown-item")= post.title
